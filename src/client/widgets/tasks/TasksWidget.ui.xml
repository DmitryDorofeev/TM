<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style field="style" src="styles/style.css"/>
    <ui:style field="dynamic" src="styles/dynamic.css" type="client.widgets.tasks.TasksWidget.TasksStyle"/>
    <g:HTMLPanel styleName="{style.panel}">
        <div class="{style.title}">Задачи</div>
        <g:FlowPanel styleName="{style.content}" ui:field="content">
            <g:HTMLPanel>
                <div class="{style.preloader}" ui:field="preloader">
                    <span class="{style.first}"></span>
                    <span class="{style.second}"></span>
                    <span class="{style.third}"></span>
                    <span class="{style.fourth}"></span>
                </div>
            </g:HTMLPanel>
        </g:FlowPanel>
        <div class="{style.add-task}">
            <input type="text" class="{style.add-task__input}"/><g:Button styleName="gwt-Button {style.add-task__button}">Добавить задачу</g:Button>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>