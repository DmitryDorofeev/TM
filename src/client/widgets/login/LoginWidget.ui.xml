<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="styles/style.css"/>
    <g:HTMLPanel>
        <div class="{style.panel}">
            <div class="{style.panel__row}">
                <g:Label ui:field="error"></g:Label>
            </div>
            <g:HTMLPanel ui:field="loginPanel">
                <div class="{style.panel__row}">
                    <div class="{style.panel__title}">
                        Войти
                    </div>
                </div>
                <div class="{style.panel__row}">
                    <g:TextBox ui:field="loginEmailField"></g:TextBox>
                </div>
                <div class="{style.panel__row}">
                    <g:PasswordTextBox ui:field="loginPasswordField"></g:PasswordTextBox>
                </div>
                <div class="{style.panel__row}">
                    <g:Button ui:field="loginButton">Войти</g:Button>
                </div>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="signupPanel">
                <div class="{style.panel__row}">
                    <div class="{style.panel__title}">
                        Зарегистрироваться
                    </div>
                </div>
                <div class="{style.panel__row}">
                    <g:TextBox ui:field="signupEmailField"></g:TextBox>
                </div>
                <div class="{style.panel__row}">
                    <g:PasswordTextBox ui:field="signupPasswordField"></g:PasswordTextBox>
                </div>
                <div class="{style.panel__row}">
                    <g:Button ui:field="signupButton">Зарегистрироваться</g:Button>
                </div>
            </g:HTMLPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>