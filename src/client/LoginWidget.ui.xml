<!-- HelloWidgetWorld.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .panel {
            width: 500px;
            border: 2px solid #666;
            border-radius: 3px;
            margin: 0 auto;
            padding: 20px;
        }

        .panel__row {
            display: block;
            text-align: center;
            margin: 20px;
        }

        input {
            width: 100%;
            height: 30px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.panel}">
            <div class="{style.panel__row}">
                <g:Label ui:field="error"></g:Label>
            </div>
            <div class="{style.panel__row}">
                <g:TextBox ui:field="loginField"></g:TextBox>
            </div>
            <div class="{style.panel__row}">
                <g:PasswordTextBox ui:field="passwordField"></g:PasswordTextBox>
            </div>
            <div class="{style.panel__row}">
                <g:Button ui:field="loginButton">Войти</g:Button>
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>